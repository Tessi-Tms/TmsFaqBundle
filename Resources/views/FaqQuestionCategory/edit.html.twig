{% extends 'TmsComplaintBundle::layout.html.twig' %}

{% block nav %}
    {% include 'TmsComplaintBundle::nav.html.twig' with {'active' : ['faq', 'questionCategory']} %}
{% endblock %}

{% block main %}
    <h1>{% trans %}Faq question category edit{% endtrans %}</h1>

    <form action="{{ path('tms_faq_faq-question-category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn">{% trans %}Edit{% endtrans %}</button>
        </p>
    </form>

    <ul class="actions">
        <li>
            <a href="{{ path('tms_faq_faq-question-category') }}" class="btn">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li>
            <form action="{{ path('tms_faq_faq-question-category_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn">{% trans %}Delete{% endtrans %}</button>
            </form>
        </li>
    </ul>
{% endblock %}
